<h3>Notícias</h3>

<%= render 'search_form', url: backoffice_news_index_path %><br>

<table class="table table-striped table-bordered">
  <thead>
    <th>Notícia</th>
    <th>Data</th>
    <th>Destaque</th>
    <th>Activa</th>
    <th colspan="3">Ações</th>
  </thead>
  <tbody>
    <%= render @news %>
  </tbody>
</table>

<div id="pagination">
  <%= render 'paginate', collection: @news %>
</div>

<%= link_to 'Inserir', new_backoffice_news_path, class: 'btn btn-success' %>
