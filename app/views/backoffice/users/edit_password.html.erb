<h5><strong>Nome</strong></h5>

<p><%= current_user.name %></p><br>

<%= simple_form_for @user, url: backoffice_update_password_path, as: :user do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :password, wrapper_html: { class: 'col-xs-4' } %>
  </div>

  <div class="row">
    <%= f.input :password_confirmation, wrapper_html: { class: 'col-xs-4' } %>
  </div>

  <div class="row">
    <%= f.button :submit, class: 'btn btn-success btn-submit' %>
    <%= link_to 'Cancelar', backoffice_user_path(@user), class: 'btn btn-default' %>
  </div>
<% end %>
