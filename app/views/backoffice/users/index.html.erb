<h3>Utilizadores</h3>

<%= render 'search_form', url: backoffice_users_path %><br>

<table class="table table-striped table-bordered">
  <thead>
    <th width="50%">Nome</th>
    <th>Tipo</th>
    <th>Activo</th>
    <th width="35%">Ações</th>
  </thead>
  <tbody>
    <%= render partial: 'user', collection: @users %>
  </tbody>
</table>

<div id="pagination">
  <%= render 'paginate', collection: @users %>
</div>

<%= link_to 'Inserir', new_backoffice_user_path, class: 'btn btn-success' %>

<script id="flash-message-template" type="text/x-handeblars-template">
  <div class="alert alert-danger alert-dismissible" role="danger">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>

    {{msg}}
  </div>
</script>
