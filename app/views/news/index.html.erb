<div class="row">
  <% @featured_news.each do |news| %>
    <div class="col-md-6">

      <h3><%= link_to news.title, news %></h3>

      <h5><%= l news.date %></h5>
      <div class="news-text text-justify">
        <div class="image">
          <%= image_tag news.image_url(:medium), class: 'img-thumbnail' %>
        </div>

        <%= normalize_html_text news.text, length: 500 %>
      </div>
    </div>
  <% end %>
</div><br>

<%= render @news %>

<%= render 'paginate', collection: @news %>
