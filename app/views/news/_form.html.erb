<h1>Inserir/Editar</h1>

<%= simple_form_for @news do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :title, wrapper_html: { class: 'col-xs-10' }, input_html: { class: 'form-control' } %>
    <%= f.input :date, as: :datepicker, wrapper_html: { class: 'col-xs-2' }, input_html: { class: 'form-control' } %>
  </div>

  <div class="row">
    <%= f.input :summary, wrapper_html: { class: 'col-xs-12' }, input_html: { class: 'form-control', rows: 5 } %>
  </div>

  <%= tinymce_assets %>

  <div class="row">
    <%= f.input :text, wrapper_html: { class: 'col-xs-12' }, input_html: { class: 'tinymce form-control', rows: 10 } %>
  </div>

  <%= tinymce %>

  <div class="row">
    <%= f.input :image, wrapper_html: { class: 'col-xs-2' }, input_html: { class: 'form-control' } %>
  </div>

  <div class="row">
    <%= f.input :featured,  wrapper_html: { class: 'col-xs-2' } %>
    <%= f.input :active, wrapper_html: { class: 'col-xs-2' } %>
  </div>

  <div class="row">
    <%= f.button :submit, class: 'btn btn-success btn-submit', wrapper_html: { class: 'col-xs-2' }, input_html: { class: 'form-control' } %>

    <%= link_to 'Cancelar', [:dashboard, current_entity], class: 'btn btn-default' %>
  </div>
<% end %>
