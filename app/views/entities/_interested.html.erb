<div class="media">
  <div class="media-left">
    <%= link_to image_tag(entity.photo_url(:thumb), class: 'media-object'), entity %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"> <%= link_to entity.name, entity %></h4>

    <%= entity.presentation.truncate(300).html_safe %>
  </div>
</div>
