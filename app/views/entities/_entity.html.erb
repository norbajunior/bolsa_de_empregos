<div class="media col-md-6 entity">
  <div class="media-left">
    <div class="media-left">
      <%= link_to image_tag('https://d1uxgic6sz1xze.cloudfront.net/uploaded/companies/logos/9d249202093728f3b79647a6f367fe05e96e0041/small.png', class: 'media-object', width: '100px'), entity %>
    </div>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to entity.name, entity %><br>
      <%#= entity.offers.size %>
    </h4>

    <%= entity.presentation.truncate(200).html_safe %>
  </div>

  <div class="links">
    <%= link_to 'Interessado/a', '', class: 'btn btn-success btn-sm' %>
    <%= link_to 'Editar', [:edit, entity], class: 'btn btn-primary btn-sm' %>
  </div>
</div>
