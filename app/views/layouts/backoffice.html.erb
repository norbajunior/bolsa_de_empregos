<!DOCTYPE html>
<html>
<head>
  <title>BolsaDeEmpregos</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
  <![endif]-->
</head>
<body>
  <header>
    <div class="container">
      <div class="navbar-header">
        <h1>Bolsa de Emprego</h1>
      </div>

      <nav class="navbar-text navbar-right">
        <%= link_to current_user.name, backoffice_user_path(current_user), class: 'navbar-link' %> |
        <%= link_to 'Sair', backoffice_logout_path, method: :delete, class: 'navbar-link' %>
      </nav>
    </div>

    <div class="container">
      <%= render 'backoffice_navbar' %>
    </div>
  </header>

  <div class="container" id="backoffice">
    <%= render 'flash_messages' %>

    <%= yield %>
  </div>
</body>
</html>
