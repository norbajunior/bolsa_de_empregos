<div class="row">
  <div class="col-xs-6">
    <h3>Candidaturas</h3>

    <%= render partial: 'dashboard/offer', collection: @candidate.applied_offers,
        locals: { display_links: false } %>

    <h3>Empresas interessadas em mim</h3>

    <%= render partial: 'entities/interested', collection: @candidate.interested_entities, as: :entity %>
  </div>

  <div class="col-xs-4 col-xs-offset-2 links">
    <h3>Candidato</h3>

    <%= link_to 'Editar Dados', [:edit, @candidate], class: 'btn btn-primary' %>

    <%= link_to 'Alterar Password', password_reset_path, class: 'btn btn-warning' %>
  </div>
</div>
