<% if logged_in? %>
  <% if current_user.backoffice? %>
    <%= link_to current_user.name, backoffice_user_path(current_user), class: 'navbar-link' %> |
  <% else %>
    <%= link_to current_user.name, [:dashboard, current_user], class: 'navbar-link' %> |
  <% end %>
  
  <%= link_to 'Sair', logout_path, method: :delete, class: 'navbar-link' %>
<% else %>
  <%= link_to 'Registar-me', signup_path, class: 'navbar-link' %> |
  <%= link_to 'Login', login_path, class: 'navbar-link' %>
<% end %>
